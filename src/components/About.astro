---
import { about } from '../data/portfolio';
---

<section id="about" class="max-w-7xl mx-auto px-6 mb-32">
  <div class="grid md:grid-cols-2 gap-16 items-start">
    <div>
      <h2 class="text-4xl md:text-5xl font-display font-bold mb-8 text-slate-900 dark:text-white">
        About <span class="text-brand-500">Me</span>
      </h2>
      <div class="space-y-4 text-lg text-slate-600 dark:text-slate-400 leading-relaxed">
        {about.story.map((paragraph) => (
          <p set:html={paragraph} />
        ))}
      </div>
    </div>

    <!-- What I Do Best -->
    <div class="space-y-6">
      <h3 class="text-2xl font-bold mb-6 text-slate-900 dark:text-white">What I Do <span class="text-brand-500">Best</span></h3>
      
      {about.expertise.map((item) => (
        <div class={`p-6 bg-gradient-to-br ${item.color} border ${item.borderColor} rounded-2xl hover:scale-105 transition-transform`}>
          <div class="flex items-center gap-4">
            <div class={`w-12 h-12 rounded-xl ${item.bgColor} flex items-center justify-center text-white text-xl flex-shrink-0`}>
              <i class={item.icon}></i>
            </div>
            <div>
              <h4 class="font-bold text-lg mb-2 text-slate-900 dark:text-white">{item.title}</h4>
              <p class="text-slate-600 dark:text-slate-400">{item.description}</p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
