---
import { education, courses } from '../data/portfolio';
---

<section id="education" class="max-w-7xl mx-auto px-6 mb-32">
  <h2 class="text-4xl font-display font-bold mb-12 text-center">
    Education & <span class="text-brand-500">Certifications</span>
  </h2>
  
  <div class="grid md:grid-cols-3 sm:grid-cols-2 xs:grid-cols-1 gap-6">
    {education.map((edu) => (
      <div class={`p-6 rounded-2xl border hover:scale-105 transition-transform bg-gradient-to-br ${edu.gradient} ${edu.border}`}>
        <div class={`w-12 h-12 ${edu.bg} rounded-xl flex items-center justify-center text-white text-2xl mb-4`}>
          <i class={edu.icon}></i>
        </div>
        <h3 class="font-bold text-lg mb-2">{edu.degree}</h3>
        <p class="text-slate-500 dark:text-slate-400 text-sm mb-2">{edu.type}</p>
        <p class="text-brand-500 font-bold text-sm">{edu.institution} â€¢ {edu.year}</p>
      </div>
    ))}
  </div>

  <!-- Courses -->
  <div class="mt-12">
    <h3 class="text-2xl font-bold mb-6 text-center">Continuous Learning</h3>
    <div class="grid md:grid-cols-3 sm:grid-cols-2 xs:grid-cols-1 gap-4">
      {courses.map((course) => (
        <div class={`flex items-center gap-4 p-4 rounded-lg border bg-gradient-to-br ${course.gradient} ${course.border} ${course.bg} hover:scale-105 transition-transform`}>
          <i class={`${course.icon} text-2xl ${course.text}`}></i>
          <div>
            <p class="font-bold cursor-default">{course.name}</p>
            <p class="text-sm text-slate-500 dark:text-slate-400 cursor-default">{course.platform}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
