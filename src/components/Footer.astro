---
import { personalInfo } from '../data/portfolio';
---

<!-- Footer -->
<footer class="bg-white dark:bg-slate-900 py-12 border-t border-slate-200 dark:border-slate-800">
  <div class="max-w-7xl mx-auto px-6">
    <div class="flex flex-col md:flex-row justify-between items-center gap-6">
      <div class="flex items-center gap-3">
        <div class="w-10 h-10 rounded-full bg-brand-500 flex items-center justify-center text-white font-bold">
          AV
        </div>
        <div>
          <p class="font-bold text-slate-900 dark:text-white">{personalInfo.name}</p>
          <p class="text-sm text-slate-500 dark:text-slate-400">Software Engineer â€¢ {personalInfo.location}</p>
        </div>
      </div>
      <div class="flex items-center gap-8 text-sm">
        <a href={personalInfo.github} target="_blank" class="text-slate-600 dark:text-slate-400 hover:text-brand-500 dark:hover:text-brand-600 transition-colors font-semibold">
          <i class="fab fa-github mr-2"></i>GitHub
        </a>
        <a href={personalInfo.linkedin} target="_blank" class="text-slate-600 dark:text-slate-400 hover:text-brand-500 dark:hover:text-brand-600 transition-colors font-semibold">
          <i class="fab fa-linkedin-in mr-2"></i>LinkedIn
        </a>
        <a href={`mailto:${personalInfo.email}`} class="text-slate-600 dark:text-slate-400 hover:text-brand-500 dark:hover:text-brand-600 transition-colors font-semibold">
          <i class="fas fa-envelope mr-2"></i>Email
        </a>
      </div>
    </div>
    <div class="mt-8 pt-8 border-t border-slate-200 dark:border-slate-800 text-center text-sm text-slate-500 dark:text-slate-400">
      <p>&copy; {new Date().getFullYear()} {personalInfo.name}. All rights reserved.</p>
    </div>
  </div>
</footer>
