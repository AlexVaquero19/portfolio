---
import { projects } from '../data/portfolio';

const featured = projects.find(p => p.featured);
const others = projects.filter(p => !p.featured);

const statusColors = {
  'Production': 'bg-brand-500',
  'Open Source': 'bg-purple-500',
  'Education': 'bg-blue-500'
};
---

<section id="projects" class="max-w-7xl mx-auto px-6 mb-12">
  <h2 class="text-4xl md:text-5xl font-display font-bold mb-16 text-center">
    Featured <span class="text-brand-500">Projects</span>
  </h2>
  
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
    <!-- Featured Project -->
    {featured && (
      <div class="md:col-span-2 group relative bg-gradient-to-br from-brand-500/10 to-cyan-500/10 rounded-[40px] overflow-hidden border-2 border-brand-500/30 hover:border-brand-500 transition-all">
        <div class="p-10 space-y-6">
          <div class="flex justify-between items-start">
            <div>
              <div class={`inline-block px-3 py-1 ${statusColors[featured.status]} text-white rounded-full text-xs font-bold uppercase mb-3`}>
                {featured.status}
              </div>
              <h3 class="text-3xl font-bold mb-2">{featured.title}</h3>
              <p class="text-slate-500 dark:text-slate-400 mb-4">{featured.description}</p>
            </div>
            <a href={featured.link} aria-label="Maritime Link" target="_blank" class="text-brand-500 text-3xl hover:scale-110 transition-transform">
              <i class={featured.linkType === 'github' ? 'fab fa-github' : 'fa-solid fa-external-link-alt'}></i>
            </a>
          </div>
          
          <div class="space-y-3 text-slate-600 dark:text-slate-400">
            {featured.achievements.map((achievement) => (
              <div class="flex items-start gap-3">
                <i class="fas fa-check-circle text-brand-500 mt-1"></i>
                <span set:html={achievement.replace(/\*\*(.*?)\*\*/g, '<strong>$1</strong>')} />
              </div>
            ))}
          </div>
          
          <div class="flex flex-wrap gap-2 pt-4">
            {featured.technologies.map((tech) => (
              <span class="px-3 py-1 bg-slate-200 dark:bg-slate-800 rounded-full text-xs font-bold hover:scale-[1.1]">{tech}</span>
            ))}
          </div>
        </div>
      </div>
    )}

    <!-- Other Projects -->
    {others.map((project) => (
      <div class={`group relative bg-slate-100 dark:bg-slate-900 rounded-[40px] overflow-hidden border border-slate-200 dark:border-slate-800 hover:border-brand-500 transition-all ${project.achievements.length > 2 ? 'md:col-span-2' : ''}`}>
        <div class="p-8 space-y-4">
          <div class="flex justify-between items-start">
            <div>
              <div class={`inline-block px-3 py-1 ${statusColors[project.status]} text-white rounded-full text-xs font-bold uppercase mb-3`}>
                {project.status}
              </div>
              <h3 class="text-2xl font-bold">{project.title}</h3>
            </div>
            <a href={project.link} aria-label="Github Link" target="_blank" class="text-brand-500 text-2xl hover:scale-110 transition-transform">
              <i class={project.linkType === 'github' ? 'fab fa-github' : 'fa-solid fa-external-link-alt'}></i>
            </a>
          </div>
          <p class="text-slate-500 dark:text-slate-400">{project.description}</p>
          
          {project.achievements.length > 2 ? (
            <div class="grid md:grid-cols-2 gap-3 text-sm text-slate-600 dark:text-slate-400">
              {project.achievements.map((achievement) => (
                <div class="flex items-start gap-2">
                  <i class="fas fa-star text-amber-500 mt-1"></i>
                  <span>{achievement}</span>
                </div>
              ))}
            </div>
          ) : (
            <div class="space-y-2 text-sm text-slate-600 dark:text-slate-400">
              {project.achievements.map((achievement) => (
                <div class="flex items-start gap-2">
                  <i class="fas fa-star text-amber-500 mt-1"></i>
                  <span>{achievement}</span>
                </div>
              ))}
            </div>
          )}
          
          <div class="flex flex-wrap gap-2 pt-4">
            {project.technologies.map((tech) => (
              <span class="px-3 py-1 bg-slate-200 dark:bg-slate-800 rounded-full text-xs font-bold hover:scale-[1.1]">{tech}</span>
            ))}
          </div>
        </div>
      </div>
    ))}
  </div>

  <!-- GitHub Activity CTA -->
  <div class="mt-12 text-center">
    <a href="https://github.com/AlexVaquero19" target="_blank" class="inline-flex items-center gap-3 px-8 py-4 bg-slate-900 dark:bg-white text-white dark:text-slate-900 rounded-full font-bold hover:scale-105 transition-transform">
      <i class="fab fa-github text-2xl"></i>
      <span>View All Projects on GitHub</span>
      <i class="fas fa-arrow-right"></i>
    </a>
  </div>
</section>
