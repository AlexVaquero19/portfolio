---
import { skills, tools, interests } from '../data/portfolio';

const skillCategories = [
  { title: 'Backend & Frameworks', icon: 'fas fa-server', color: 'bg-brand-500', gradient: 'from-brand-500/5 to-cyan-500/5', border: 'border-brand-500/20', skills: skills.backend },
  { title: 'Frontend & UI', icon: 'fas fa-palette', color: 'bg-blue-500', gradient: 'from-blue-500/5 to-purple-500/5', border: 'border-blue-500/20', skills: skills.frontend },
  { title: 'Database & DevOps', icon: 'fas fa-database', color: 'bg-purple-500', gradient: 'from-purple-500/5 to-pink-500/5', border: 'border-purple-500/20', skills: skills.database }
];

const levelColors = {
  'EXPERT': 'bg-brand-500 dark:bg-brand-800',
  'ADVANCED': 'bg-cyan-700',
  'INTERMEDIATE': 'bg-slate-600'
};
---

<section id="skills" class="max-w-7xl mx-auto px-6 mb-32">
  <h2 class="text-4xl md:text-5xl font-display font-bold mb-16 text-center">
    Technical <span class="text-brand-500">Expertise</span>
  </h2>

  <div class="grid md:grid-cols-3 gap-8">
    {skillCategories.map((category) => (
      <div class={`p-8 bg-gradient-to-br ${category.gradient} rounded-3xl border ${category.border}`}>
        <div class="flex items-center gap-3 mb-6">
          <div class={`w-12 h-12 ${category.color} rounded-xl flex items-center justify-center text-white text-xl`}>
            <i class={category.icon}></i>
          </div>
          <h3 class="text-2xl font-bold">{category.title}</h3>
        </div>
        <div class="space-y-4">
          {category.skills.map((skill) => (
            <div class="flex items-center justify-between">
              <div class="flex items-center gap-3">
                <i class={`${skill.icon} ${skill.color} text-xs`}></i>
                <span class="font-semibold">{skill.name}</span>
              </div>
              <span class={`text-xs ${levelColors[skill.level]} text-white px-3 py-1 rounded-full font-bold`}>
                {skill.level}
              </span>
            </div>
          ))}
        </div>
      </div>
    ))}
  </div>

  <!-- Development Tools -->
  <div class="mt-12">
    <h3 class="text-2xl font-bold mb-6 text-center">Development Environment</h3>
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
      {tools.map((tool) => (
        <div class="flex items-center justify-center gap-3 p-4 bg-white dark:bg-slate-900 rounded-2xl border border-slate-200 dark:border-slate-800 hover:scale-105 transition-transform">
          <i class={`${tool.icon} text-2xl ${tool.color}`}></i>
          <span class="font-bold">{tool.name}</span>
        </div>
      ))}
    </div>
  </div>

  <!-- Interests -->
  <div class="mt-12 p-10 rounded-[32px] bg-gradient-to-br from-brand-500/5 to-cyan-500/5 border border-brand-500/20">
    <h3 class="text-3xl font-display font-bold mb-8 text-center">
      <i class="fa-solid fa-heart text-brand-500"></i> Beyond <span class="text-brand-500">Coding</span>
    </h3>
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
      {interests.map((interest) => (
        <div class="p-6 bg-white/10 backdrop-blur-md rounded-2xl hover:scale-105 transition-transform text-center border border-brand-500/20">
          <i class={`${interest.icon} text-3xl mb-3 text-brand-500`}></i>
          <p class={`font-bold ${interest.italic ? 'italic' : ''}`}>{interest.name}</p>
        </div>
      ))}
    </div>
  </div>
</section>
